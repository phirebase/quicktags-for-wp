{
	"$schema": "https://playground.wordpress.net/blueprint-schema.json",
	"landingPage": "/wp-admin/post.php?post=1&action=edit",
	"preferredVersions": {
		"php": "8.0",
		"wp": "latest"
	},
	"phpExtensionBundles": [
		"kitchen-sink"
	],
	"steps": [
		{
			"step": "login",
			"username": "admin",
			"password": "password"
		},
		{
			"step": "installPlugin",
			"pluginZipFile": {
				"resource": "wordpress.org/plugins",
				"slug": "classic-editor"
			},
			"options": {
				"activate": true
			}
		},
		{
			"step": "installPlugin",
			"pluginZipFile": {
				"resource": "wordpress.org/plugins",
				"slug": "wp-quicktags"
			},
			"options": {
				"activate": true
			}
		},
		{
			"step": "createPost",
			"title": "Nový příspěvek",
			"content": "",
			"status": "draft"
		},
		{
			"step": "runPHP",
			"code": "<?php require_once ABSPATH . 'wp-load.php'; wp_update_post(['ID' => 1, 'post_status' => 'publish']); ?>"
		},
		{
			"step": "runPHP",
			"code": "<?php update_user_meta(1, 'rich_editing', 'false'); ?>"
		}
	]
}
