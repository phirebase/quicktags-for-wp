{
    "$schema": "http://json-schema.org/schema",
    "landingPage": "/wp-admin/post-new.php",
    "login": true,
    "plugins": [
        {
            "pluginData": {
                "resource": "wordpress.org/plugins",
                "slug": "classic-editor"
            },
            "options": {
                "activate": true
            }
        },
        {
            "pluginData": {
                "resource": "wordpress.org/plugins",
                "slug": "wp-quicktags"
            },
            "options": {
                "activate": true
            }
        }
    ],
    "steps": [
        {
            "step": "wp-cli",
            "command": ["user", "meta", "update", "1", "rich_editing", "false"]
        }
    ]
}
